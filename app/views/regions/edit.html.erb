<h2>Edit <%= @region.name %></h2>

<% if @region.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @region.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<form action='/regions/<%=@region.id%>' method='post'>
  <input name='_method' type='hidden' value ='patch'>
  <label for='region_name'>Name</label>
  <input id='region_name' name='regions[name]' value='<%= @region.name%>' type='text'>
  <button>Update Region</button>
</form>