<h1>All Species</h1>

<ul>
  <% @species.each do |species| %>
    <li><a href="/species/<%= species.id%>"><%= species.name %></a>
      <ul>
        <a class = 'smaller' href="species/<%= species.id%>/edit">Edit</a> |
        <a class = 'smaller' href="species/<%= species.id%>"
          data-confirm="Are you sure you want to eradicate this species?"
          data-method="delete"
          rel="nofollow">Delete</a>
      </ul>
    </li>
    <br>
  <% end %>
</ul>

<p><a href='/species/new'>Create new species</a></p>

<h3>Sightings Report</h3>

<form action="/sightings" method="get">
  <label for="sightings_start_date">Start Date</label>
  <input id="sightings_start_date" name="sightings[start_date]" type="date">
  <label for="sightings_end_date">End Date</label>
  <input id="sightings_end_date" name="sightings[end_date]" type="date">
  <button>Run report</button>
</form>

<h3>Regions</h3>

<p>Click on a region to see the sightings recorded in that region</p>

<ul>
  <% @regions.each do |region| %>
    <li><a class = 'region' href="/regions/<%= region.id %>"><%= region.name %></a>
        <a class = 'smaller' href="regions/<%= region.id%>/edit">Edit</a> |
        <a class = 'smaller' href="regions/<%= region.id%>"
          data-confirm="Are you sure you want to eradicate this region?"
          data-method="delete"
          rel="nofollow">Delete</a>
    </li>
  <% end %>
</ul>

<p><a href="/regions">Add a region</a></p>
